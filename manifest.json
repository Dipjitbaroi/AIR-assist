{
  "name": "AIRAssist",
  "short_name": "AIRAssist",
  "description": "Connect to your AI assistant through your Bluetooth earpiece",
  "start_url": "./",
  "display": "standalone",
  "background_color": "#f0f0f0",
  "theme_color": "#007aff",
  "orientation": "portrait",
  "icons": [
    {
      "src": "./icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "./icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "./icons/maskable-icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "./icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "apple-touch-icon"
    }
  ],
  "shortcuts": [
    {
      "name": "Connect",
      "short_name": "Connect",
      "description": "Connect to devices",
      "url": "./?action=connect"
    },
    {
      "name": "Talk to Alli",
      "short_name": "Talk",
      "description": "Start a conversation with Alli",
      "url": "./?action=talk"
    }
  ],
  "screenshots": [
    {
      "src": "./screenshots/screen1.png",
      "sizes": "1280x720",
      "type": "image/png"
    },
    {
      "src": "./screenshots/screen2.png",
      "sizes": "1280x720",
      "type": "image/png"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "permissions": ["notifications", "microphone"],
  "launch_handler": {
    "client_mode": "auto"
  },
  "scope": "./",
  "orientation": "portrait",
  "categories": ["productivity", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
  "display_override": ["standalone", "fullscreen", "minimal-ui"],
  "capture_links": "existing-client-navigate",
  "id": "airassist-pwa",
  "iarc_rating_id": "",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "file_handlers": [],
  "protocol_handlers": [],
  "share_target": {
    "action": "./",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
